x=0
while x== 0:
    print("Działania dostępne do wykonania:\n")
    print("Dodawanie\nOdejmowanie\nMnożenie\nDzielenie\nReszta z dzielenia\nZaokrąglanie dzielenia do liczb całkowitych\nPotęgowanie\n")
    print("Wpisz nazwę działania jakie chcesz wykonać:")
    answer=input()
    check_dodawanie=answer.endswith("Dodawanie")
    if check_dodawanie == True or answer == "+":
        print("Dodawanie!")
        print("Ile liczb chcesz dodać?")
        quanity=int(input())
        i=0
        lista=[]
        lista1=[]
        while i<quanity:
            print("Podaj liczbę:")
            digit=float(input())
            lista1=[digit]
            lista.extend(lista1)
            i+=1
        x=len(lista)
        b=0
        zmienna=float(0)
        print("Podałeś",x,"wartości,",lista[b:])
        while b<x:
            zmienna+=lista[b]
            b+=1
        print("Suma tych liczb wynosi",zmienna)
        yyy=input("Wybierz dowolny przycisk aby kontynuować...")
        x=0
    check_odejmowanie=answer.endswith("Odejmowanie")
    if check_odejmowanie == True or answer == "-":
        print("Odejmowanie!")
        print("Będziesz odejmował kolejne liczby od pierwszej jaką podasz!")
        print("Ile liczb chcesz odjąć?")
        quanity=int(input())
        i=0
        lista=[]
        lista1=[]
        while i<quanity:
            print("Podaj liczbę:")
            digit=float(input())
            lista1=[digit]
            lista.extend(lista1)
            i+=1
        x=len(lista)
        b=0
        zmienna=float(0)+lista[b]
        print("Podałeś",x,"wartości,",lista[b:])
        while b<x-1:
            b+=1
            zmienna-=lista[b]
        print("Różnica tych liczb wynosi",zmienna)
        yyy=input("Wybierz dowolny przycisk aby kontynuować...")
        x=0
    check_mnozenie=answer.startswith("Mnożenie")
    if check_mnozenie == True or answer == "*":
        print("Mnożenie!")
        print("Ile liczb chcesz pomnożyć?")
        quanity=int(input())
        i=0
        lista=[]
        lista1=[]
        while i<quanity:
            print("Podaj liczbę:")
            digit=float(input())
            lista1=[digit]
            lista.extend(lista1)
            i+=1
        x=len(lista)
        b=0
        zmienna=lista[b]
        print("Podałeś",x,"wartości,",lista[b:])
        while b<x-1:
            b+=1
            zmienna*=lista[b]
        print("Po pomnożeniu tych liczb otrzymujemy wartość",zmienna)
        yyy=input("Wybierz dowolny przycisk aby kontynuować...")
        x=0
    check_dzielenie=answer.startswith("Dzielenie")
    if check_dzielenie == True or answer=="/":
        print("Dzielenie!")
        print("Pierwszą liczbę będziesz dzielił przez drugą, następnie wynik będzie dzielony przez trzecią itd..")
        print("Ile liczb chcesz podzielić?")
        quanity=int(input())
        i=0
        lista=[]
        lista1=[]
        while i<quanity:
            print("Podaj liczbę:")
            digit=float(input())
            lista1=[digit]
            lista.extend(lista1)
            i+=1
        x=len(lista)
        b=0
        zmienna=lista[b]
        print("Podałeś",x,"wartości,",lista[b:])
        while b<x-1:
            b+=1
            zmienna/=lista[b]
        print("Po podzieleniu tych liczb otrzymujemy wartość",zmienna)
        yyy=input("Wybierz dowolny przycisk aby kontynuować...")
        x=0
        check_dzielenie=answer.startswith("Dzielenie")
    if check_dzielenie == True or answer=="/":
        print("Dzielenie!")
        print("Pierwszą liczbę będziesz dzielił przez drugą, następnie wynik będzie dzielony przez trzecią itd..")
        print("Ile liczb chcesz podzielić?")
        quanity=int(input())
        i=0
        lista=[]
        lista1=[]
        while i<quanity:
            print("Podaj liczbę:")
            digit=float(input())
            lista1=[digit]
            lista.extend(lista1)
            i+=1
        x=len(lista)
        b=0
        zmienna=lista[b]
        print("Podałeś",x,"wartości,",lista[b:])
        while b<x-1:
            b+=1
            zmienna/=lista[b]
        print("Po podzieleniu tych liczb otrzymujemy wartość",zmienna)
        yyy=input("Wybierz dowolny przycisk aby kontynuować...")
        x=0
    check_dzielenie_z_reszta=answer.startswith("Reszta")
    if check_dzielenie_z_reszta == True or answer=="%":
        print("Dzielenie z resztą!")
        print("Pierwszą liczbę będziesz dzielił przez drugą, następnie otrzymasz resztę, np. 20/7 - 20-14(2 całe)otrzymamy 6")
        print("Ile liczb chcesz podzielić?")
        quanity=int(input())
        i=0
        lista=[]
        lista1=[]
        while i<quanity:
            print("Podaj liczbę:")
            digit=float(input())
            lista1=[digit]
            lista.extend(lista1)
            i+=1
        x=len(lista)
        b=0
        zmienna=lista[b]
        print("Podałeś",x,"wartości,",lista[b:])
        while b<x-1:
            b+=1
            zmienna%=lista[b]
        print("Po podzieleniu tych liczb otrzymujemy wartość",zmienna)
        yyy=input("Wybierz dowolny przycisk aby kontynuować...")
        x=0
    check_zaokraglanie_dzielenie_z_reszta=answer.startswith("Zaokrąglenie")
    if check_zaokraglanie_dzielenie_z_reszta == True or answer=="//":
        print("Zaokrąglanie dzielenia do liczb całkowitych!")
        print("Pierwszą liczbę będziesz dzielił przez drugą, następnie wynik będzie dzielony przez trzecią itd..")
        print("Ile liczb chcesz podzielić?")
        quanity=int(input())
        i=0
        lista=[]
        lista1=[]
        while i<quanity:
            print("Podaj liczbę:")
            digit=float(input())
            lista1=[digit]
            lista.extend(lista1)
            i+=1
        x=len(lista)
        b=0
        zmienna=lista[b]
        print("Podałeś",x,"wartości,",lista[b:])
        while b<x-1:
            b+=1
            zmienna=zmienna//lista[b]
        print("Po podzieleniu tych liczb otrzymujemy wartość",zmienna)
        yyy=input("Wybierz dowolny przycisk aby kontynuować...")
        x=0
    check_potegowanie=answer.startswith("Potęgowanie")
    if check_potegowanie == True or answer=="**":
        print("PotĘgowanie!")
        print("Pierwszą liczbę jest podstawą, druga wykładnikiem. Jeżeli wybierzesz większa ilość liczb,\
wynik z potęgowania dwóch pierwszych będzie podstawą dla kolejnej liczby która stanie się wykładnikiem.")
        print("Ile liczb chcesz potęgować?")
        quanity=int(input())
        i=0
        lista=[]
        lista1=[]
        while i<quanity:
            print("Podaj liczbę:")
            digit=float(input())
            lista1=[digit]
            lista.extend(lista1)
            i+=1
        x=len(lista)
        b=0
        zmienna=lista[b]
        print("Podałeś",x,"wartości,",lista[b:])
        while b<x-1:
            b+=1
            zmienna=zmienna**lista[b]
        print("Po wykonaniu potęgi tych liczb otrzymujemy wartość",zmienna)
        yyy=input("Wybierz dowolny przycisk aby kontynuować...")
        x=0
    else:
        print("Nierozpoznana komenda, powrót do menu!")
        yyy=input("Wybierz dowolny przycisk aby kontynuować...")
        x=0
